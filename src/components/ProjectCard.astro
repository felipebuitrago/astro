---
interface Props {
	project: string;
	title: string;
	body: string;
}

const { project, title, body } = Astro.props;
---

<div class="mx-auto max-w-2xl lg:text-center mt-20">
    <p class="mt-2 text-3xl font-bold tracking-tight text-white sm:text-4xl" transition:name=`project ${project} title`>
        {title}
    </p>
    <p class="mt-6 text-lg leading-8 text-white" transition:name=`project ${project} body`>
        {body}
    </p>
</div>


